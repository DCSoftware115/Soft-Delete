<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_base_module_uninstall_inherit_soft_delete" model="ir.ui.view">
            <field name="name">Uninstall module (Soft Delete)</field>
            <field name="model">base.module.uninstall</field>
            <field name="inherit_id" ref="base.view_base_module_uninstall"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='model_ids']" position="replace">
                    <field name="is_soft_delete_module" invisible="1"/>
                    <field name="model_ids" string="Models" nolabel="1" attrs="{'invisible': [('is_soft_delete_module', '=', True)]}">
                        <tree string="Models">
                            <field name="name" string="Name"/>
                            <field name="count"/>
                        </tree>
                    </field>
                    <field name="model_ids" string="Wizard Models" nolabel="1" attrs="{'invisible': [('is_soft_delete_module', '=', False)]}">
                        <tree string="Wizard Models" create="false" edit="false" delete="false">
                            <field name="name" string="Model Name"/>
                            <field name="count" string="Records"/>
                        </tree>
                    </field>
                </xpath>
            </field>
        </record>
    </data>
</odoo>